<div class="main clearfix">
  <article class="content">
    <section>
    <h1>記事詳細画面</h1>

    <p>内容: <%= @slogan.slogan_text %></p>
    <% unless @slogan.user_id == current_user.id %>
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入り登録', favorites_path(slogan_id: @slogan.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <% end %>

    </section>
  </article>
</div>
